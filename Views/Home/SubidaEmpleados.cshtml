@{
    ViewData["Title"] = "Subida de Empleados";
}

<div class="text-center">
    <h1 class="LetraGrande" id="departamentos">Subida de empleados</h1>
</div>
@using (Html.BeginForm("SubidaEmpleadosPOST", "Empleados"))
{
<div class="text-center">
  <div class="container dos">
    <div class="row">
        <div class="col-md-4">
          <div class="form-group gallardo">
            <label for="exampleInputEmail1" class="">Nombre</label> @Html.TextBox("nombre")
          </div>
        </div>
        <div class="col-md-4">  
          <div class="form-group gallardo">
            <label for="exampleInputPassword1">DNI</label> @Html.TextBox("dni")
          </div>
        </div> 
        <div class="col-md-4">
          <div class="form-group gallardo">
            <label for="exampleInputPassword1">Area</label> @Html.TextBox("area")
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group gallardo">
            <label for="exampleInputPassword1">Direccion</label> @Html.TextBox("direccion")
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group gallardo">
            <label for="exampleFormControlTextarea1">Descripcion</label> @Html.TextBox("descripcion")
          </div>
        </div>
          <div class="col-md-4">
            <div class="form-group gallardo">
              <label for="exampleFormControlTextarea1">Id del Jefe correspondiente</label> @Html.TextBox("idjefe")
            </div>
          </div>
      </div>
      @Html.ActionLink("Subir", "SubidaEmpleados")
    </div>
</div>
}
