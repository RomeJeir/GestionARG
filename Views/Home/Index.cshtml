@using System.Data;

@model DataTable;
@{
    ViewData["Title"] = "Listado de empleados";
}

<div class="text-center">
    <h1 class="display-4; tituloPrincipal">GestionARG</h1>
</div>
<h1 class="titulo">Listado de empleados</h1>
<div class="text-center">
<div class="container; caja">
    <div class="row">
      <div class="col-md-6">
        <h2 class="titulo">Nombre del empleado</h2>
         <table>
            <tr>
              <td>Nombre</td>
              <td>DNI</td>
              <td>Area</td>
            </tr>
            @foreach (DataRow r in Model.Rows)
            {
              <tr>
              <td>
                @Convert.ToString(r["Nombre"])
              </td>
              <td>
                @Convert.ToString(r["DNI"])
              </td>
              <td>
                @Convert.ToString(r["Area"])
              </td>
            </tr>
            }
        </table>
      </div>
      <div class="col-md-6">
        <h2 class="titulo">Datos y descripción</h2>
      </div>
    </div>
  </div>
</div>